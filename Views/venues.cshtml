@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Venues:</h2>
<hr />
@if (Model.Count != 0)
{
  <ul>
    @foreach (var venue in Model)
    {
      <li><a href='/venues/@venue.GetId()'>@venue.GetName()</a></li>
    }
  </ul>
}
<h4><a href="/venues/new">Add new venue</a></h4>
<br>
<h4>Delete All Venues</h4>
<form action="/venues/delete_all" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit" class="btn-danger">Delete</button>
</form>
<br>
<p><a class="btn-sm btn-primary" href="/">Return to Main Page</a></p>
